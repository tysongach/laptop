[alias]
  aa = add --all
  ap = add --patch
  br = branch
  ca = commit --amend
  car = commit --amend --no-edit
  cb = switch --create
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  sb = switch
  st = status
[color]
  ui = auto
[commit]
  template = ~/.gitmessage
[core]
  editor = code --wait
  excludesfile = ~/.gitignore
[credential]
  helper = osxkeychain
[fetch]
  prune = true
[format]
  pretty = %C(green)%h%C(reset) %an (%C(blue)%ar%C(reset)) %s
[init]
  defaultBranch = main
[merge]
  ff = only
[pull]
  ff = only
[rebase]
  autosquash = true
